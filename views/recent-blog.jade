extends general

block content
    article.box.page
        .container
            .row
                .col-md-8
                    .entry-title
                        h2= entry.title
                    .entry-banner
                        img(src= entry.banner)
                    .entry-publish
                        ul
                            li By
                                span= entry.writer
                            li Posted
                                span= dateFormat(entry.date, 'LL')
                    .entry-body
                        != entry.body
                    .entry-share
                        .addthis_sharing_toolbox
                    // Go to www.addthis.com/dashboard to customize your tools
                    script(type='text/javascript', src='//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5382b46f7a18e0a7')
                        
                .col-md-4
                    .side-bar-right
                        .side-bar-header
                            h3 Recent Post
                        each post in posts.orderBy('date', 'desc').slice(0,10)
                            article.post-article-widget
                                .post-article-widget-img
                                    .article-banner
                                        a(href=post.permalink)
                                            img(src= post.banner)
                                .post-article-widget-title
                                    .article-title
                                        h4
                                            a(href=post.permalink)= post.title